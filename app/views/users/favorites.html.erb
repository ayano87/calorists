<div class="row">
  <aside class="col-xs-4">
<div class="user-profile">
  <div class="icon text-center">
    <img src="<%= gravatar_url(@user, size: 100) %>" alt="" class="img-circle">
  </div>
  <div class="name text-center">
    <h1><%= @user.name %></h1>
  </div>
  
</div>
</aside>
<div class="col-xs-8">
    <ul class="nav nav-tabs nav-justified">
      <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>投稿したもの <% end %></li>
      <li class="<%= "active" if current_page?(favorites_user_path(@user)) %>"><%= link_to favorites_user_path(@user) do %>お気に入り <% end %></li>
    </ul>
    <%= render 'foods/foods', foods: @favorites %>
  </div>
</div>