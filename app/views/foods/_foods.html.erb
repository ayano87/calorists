<div class="row media-list">
  <% foods.each do |food| %>
    <div class="col-sm-3">
      <div class="box5">
      <div class="media-center">
        <div class="text-center">
          <div class="h2"><%= food.calorie %><span class="text-muted"> kcal</span></div>
        </div>
         <div class="icon text-center">
          <%= link_to image_tag('/onigiri.png', { :border => '0', :alt => '商品画像'}), food_path(food) %>
          </div>
        <div class="text-center">
          <div class="h3"><%= link_to food.name ,food_path(food), :style=>"color:#fff;" %></div>
        </div>
      </div>
      </div>
    </div>
  <% end %>
</div>